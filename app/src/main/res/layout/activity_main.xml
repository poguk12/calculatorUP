<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="552dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/display"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="end"
            android:inputType="none"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/memory_indicator"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="#757575"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_memory_add"
                android:text="M+"
                android:layout_width="200px"
                android:layout_height="200px"/>

            <Button
                android:id="@+id/btn_memory_subtract"
                android:text="M-"
                android:layout_width="200px"
                android:layout_height="200px" />

            <Button
                android:id="@+id/btn_memory_clear"
                android:text="MC"
                android:layout_width="200px"
                android:layout_height="200px" />

            <Button
                android:id="@+id/btn_memory_recall"
                android:text="MR"
                android:layout_width="200px"
                android:layout_height="200px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="%" />

            <Button
                android:id="@+id/btn_backspace"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="⌫" />

            <!-- Второй ряд -->

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="C"></Button>

            <Button
                android:id="@+id/btn_clear_entry"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="CE" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_power"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="x²" />

            <Button
                android:id="@+id/btn_square_root"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="√" />

            <Button
                android:id="@+id/btn_reciprocal"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="1/x" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="/" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="7" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="8" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="9" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="*" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="4" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="5" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="6" />

            <Button
                android:id="@+id/btn_subtract"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="1" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="2" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="3" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="+"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_negate"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="+/-" />

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="0" />

            <Button
                android:id="@+id/btn_decimal"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="." />

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="200px"
                android:layout_height="200px"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>